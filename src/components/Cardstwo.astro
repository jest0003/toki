---
const { data } = Astro.props;
---

<article class="card">
  <a href=`/singlecase/${data.id}` class="single-link">
    <div class="card-content">
      <img
        src={`https://caasukwezdmtsmfxxqun.supabase.co/storage/v1/object/public/Cases/${data.img}`}
        alt="Placeholder img"
        class="card-image"
      />
      <div class="card-overlay">
        <h3 class="card-title">{data.case_name}</h3>
        <p class="card-description">{data.case_info}</p>
        <a href=`/singlecase/${data.id}` class="read-more">Read more</a>
      </div>
    </div></a
  >
</article>

<style>
  .card {
    height: 385px;
    border-radius: 15px;
    overflow: hidden;
    border: 2px solid #99b093;
  }

  .single-link {
    text-decoration: none;
    color: inherit;
  }

  .card-content {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .read-more {
    color: #fff;
    text-decoration: underline;
    text-transform: uppercase;
  }

  .card-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(56, 72, 92, 0.729);
    color: white;
    padding: 15px;
    transform: translateY(100%);
    transition: transform 0.3s ease;
  }

  .card:hover .card-overlay {
    transform: translateY(0);
  }

  .card-title {
    margin: 0;
    font-size: 24px;
    font-weight: bold;
  }

  .card-description {
    margin: 5px 0 10px;
    font-size: 20px;
  }
</style>
