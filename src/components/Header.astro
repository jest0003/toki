---
import logo from "../img/TokiLogo.png";
import hoverline from "../img/hoverline.svg";
---

<header class="header">
  <div>
    <a href="/"><img src={logo.src} alt="Logo" /></a>
  </div>

  <nav class="nav-links">
    <a href="/" class="nav-link">Home</a>
    <a href="/cases" class="nav-link">Cases</a>
    <a href="/toki-family" class="nav-link">Tóki Family</a>
  </nav>

  <div
    class="hamburger"
    aria-label="Menu"
    aria-expanded="false"
    role="button"
    tabindex="0"
  >
    <span class="bar"></span>
    <span class="bar"></span>
    <span class="bar"></span>
  </div>

  <ul class="navmenu">
    <li><a href="/" class="nav-link1">HOME</a></li>
    <li><a href="/cases" class="nav-link2">CASES</a></li>
    <li><a href="/toki-family" class="nav-link3">TÓKI FAMILY</a></li>
  </ul>
</header>

<style>
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1em;
  }

  .nav-links {
    display: flex;
    gap: 20px;
  }

  .nav-links a {
    text-decoration: none;
    color: initial;
    padding: 0 2rem;
    font-family: karla-r;
    text-transform: uppercase;
    font-size: 28px;
    position: relative;
    display: inline-block;
  }

  .nav-links a:visited {
    color: initial;
  }

  .nav-links a::after {
    content: "";
    position: absolute;
    width: 100%;
    bottom: -10px;
    left: 0;
    height: 16px;
    background-image: url(../img/hoverline.svg);
    background-repeat: no-repeat;
    background-position: center bottom;
    background-size: contain;
    opacity: 0;
  }

  .nav-links a:hover::after {
    opacity: 1;
  }

  .hamburger {
    display: none;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    width: 50px;
    height: 50px;
    border: none;
    padding: 10px;
    flex-direction: column;
    position: relative;
    z-index: 1;
  }

  .bar {
    display: block;
    width: 40px;
    height: 5px;
    background-color: #292e2b;
    margin: 5px 0;
    transition: 0.4s;
    border-radius: 10px;
  }

  .bar:nth-child(1) {
    margin-bottom: 6px;
  }

  .bar:nth-child(2) {
    margin-bottom: 6px;
  }

  .bar:nth-child(3) {
    margin-bottom: 0;
  }

  .hamburger.active .bar:nth-child(1) {
    transform: translateY(10px) rotate(45deg);
  }

  .hamburger.active .bar:nth-child(2) {
    opacity: 0;
  }

  .hamburger.active .bar:nth-child(3) {
    transform: translateY(-21px) rotate(-45deg);
  }

  @media (max-width: 800px) {
    .nav-links {
      display: none;
    }

    .hamburger {
      display: flex;
    }
  }

  .navmenu {
    position: fixed;
    top: 105px;
    right: 20px;
    border-radius: 10px;
    padding: 10px;
    transform: scaleY(0);
    transition: transform 0.3s ease-in-out;
    z-index: 1;
    list-style: none;
  }

  .navmenu.active {
    transform: scaleY(1);
  }

  .navmenu li {
    padding: 5px;
    text-align: center;
  }

  .navmenu li a {
    text-decoration: none;
    color: #292e2b;
    font-size: 20px;
    text-decoration: none;
    width: 200px;
    background-color: #99b093;
    padding: 15px;
    border-radius: 8px;
    display: block;
  }
</style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", function () {
    const hamburger = document.querySelector(".hamburger");
    const navMenu = document.querySelector(".navmenu");

    hamburger.addEventListener("click", function () {
      hamburger.classList.toggle("active");
      navMenu.classList.toggle("active");
      const isExpanded = navMenu.classList.contains("active");
      hamburger.setAttribute("aria-expanded", isExpanded);
    });

    document.querySelectorAll(".nav-link").forEach((link) =>
      link.addEventListener("click", () => {
        hamburger.classList.remove("active");
        navMenu.classList.remove("active");
      })
    );
  });
</script>
