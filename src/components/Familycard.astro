---
import p1 from "../img/familymember1.png";
import h1 from "../img/familymember1-hover.png";
// import p2 from "../img/familymember2.png";
// import p2 from "../img/familymember2-hover.png";
const name = Astro.props.name;
const experience = Astro.props.experience;
const email = Astro.props.email;
const id = Astro.props.id;
---

<div class="card" id={id}>
  <div class="hover_effect">
    <img src={p1.src} alt="Picture of family member 1" id="p1" />
    <img src={h1.src} alt="" id="h1" />
  </div>
  <div class="card_text">
    <h3>{name}</h3>
    <p>{experience}</p>
    <p>{email}</p>
  </div>
</div>
<style>
  p {
    margin: 0 0 0.2rem 0;
  }
  h3 {
    margin: 0.2rem 0 0.5rem 0;
  }
  .card {
    width: 70%;
    border-radius: 1rem;
    background-color: #ded2ba;
    margin-bottom: 2rem;
  }
  img {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
    border-radius: 1rem 1rem 0 0;
  }
  .card_text {
    /* height: 20%; */
    background-color: #ded2ba;
    border-radius: 1rem;
    display: flex;
    flex-direction: column;
    margin: 0 0 0.5rem 2rem;
  }
  .hover_effect {
    position: relative;
  }
  .hover_effect img {
    width: 100%;
    height: 100%;
  }
  #h1 {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
  }
  #h1:hover {
    opacity: 1;
    transition: 0.4s;
  }
  @media (width>800px) {
    /* .family {
      display: flex;
      flex-direction: row;
      gap: 14rem;
      align-items: flex-start;
    } */
    /* .family{
      display: grid;
      grid-template-rows: ;
    } */
    #card2 {
      margin-top: 300px;
    }
  }
</style>
