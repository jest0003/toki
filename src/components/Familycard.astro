---
import p1 from "../img/familymember1.jpg";
import h1 from "../img/familymember1-hover.jpg";
// import p2 from "../img/familymember2.jpg";
// import p2 from "../img/familymember2-hover.jpg";
const name = Astro.props.name;
const experience = Astro.props.experience;
const email = Astro.props.email;
---

<div class="card">
  <div class="hover_effect">
    <img src={p1.src} alt="Picture of family member 1" id="p1" />
    <img src={h1.src} alt="" id="h1" />
  </div>
  <div class="card_text">
    <h3>{name}</h3>
    <p>{experience}</p>
    <p>{email}</p>
  </div>
</div>
<style>
  .card {
    width: 100%;
    border-radius: 1rem;
    background-color: #ded2ba;
    margin-bottom: 2rem;
  }
  img {
    width: 100%;
    height: 80%;
    object-fit: cover;
    border-radius: 1rem 1rem 0 0;
  }
  .card_text {
    /* height: 20%; */
    background-color: #ded2ba;
    border-radius: 1rem;
  }
  .hover_effect {
    position: relative;
  }
  .hover_effect img {
    width: 100%;
    height: 100%;
  }
  #h1 {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
  }
  #h1:hover {
    opacity: 1;
    transition: 0.4s;
  }
</style>
