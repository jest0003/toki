---
import Layout from "../layouts/Layout.astro";
import Cardsone from "../components/Cardsone.astro";
import Lottie from "../components/Lottie.astro";
import Hero from "../components/Hero.astro";
import Button from "../components/Button.astro";
import "../css/General.css";
---

<Layout>
  <Hero />
  <Lottie />

  <div class="cases-container">
    <section class="cta-section">
      <h2>Ready to explore TÃ“KI flow?</h2>
      <Button variant="primary">Contact us</Button>
    </section>
    <h2>Our cases</h2>
    <Cardsone />
    <Button variant="primary" class="see-cases-button" href="/cases"
      >See our cases</Button
    >
  </div>
</Layout>

<style>
  .cases-container {
    max-width: 1200px;
    margin: 0;
    text-align: left;
  }
  .cta-section {
    text-align: right;
    margin: 0;
    color: #38485c;
  }

  .cta-section h2 {
    font-size: clamp(20px, 2.5vw, 32px);
    font-family: libre-i;
    margin-bottom: 40px;
  }

  .see-cases-button {
    display: inline-block;
    margin-bottom: 2em;
  }

  @media only screen and (max-width: 600px) {
    .cases-container {
      padding-left: 1em;
      padding-right: 1em;
    }

    .cta-section {
      text-align: right;
    }
  }
</style>
