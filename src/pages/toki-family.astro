---
import Layout from "../layouts/Layout.astro";
import Familycard from "../components/Familycard.astro";
import Familycard1 from "../components/Familycard1.astro";
import c1 from "../img/collab1.webp";
import c2 from "../img/collab2.webp";
import c3 from "../img/collab3.webp";
import c4 from "../img/collab4.webp";
import bgi from "../img/flow.svg";
---

<Layout>
  <div class="main">
    <div>
      <h1>Tóki family</h1>
      <p>
        TÓKI is a strategic design house for packaging with purpose. We create
        solutions that carry your product, your story, and your identity -
        making packaging a silent hero that works across the entire value chain.
        From insight to impact, we balance strategy, storytelling, and
        sustainability to deliver packaging that truly matters.
      </p>
    </div>
    <section>
      <h2>Meet the family</h2>
      <div class="family">
        <Familycard
          name="Family memember 1"
          experience="Experience with xyz"
          email="mail1@mail.dk"
          id="card1"
        />
        <Familycard1
          name="Family memember 2"
          experience="Experience with abc"
          email="mail2@mail.dk"
          id="card2"
        />
      </div>
    </section>
    <section>
      <h2>Meet our collaborators</h2>
      <div class="collaborators">
        <img src={c1.src} alt="Collaborator 1 logo" />
        <img src={c2.src} alt="Collaborator 2 logo" />
        <img src={c3.src} alt="Collaborator 3 logo" />
        <img src={c4.src} alt="Collaborator 4 logo" />
      </div>
    </section>
  </div>
</Layout>
<style>
  p {
    max-width: 65ch;
  }
  h2 {
    margin-top: 5rem;
    margin-bottom: 2rem;
  }
  .family {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
    position: relative;
  }

  .collaborators {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
  }
  .collaborators img {
    width: 100%;
    border-radius: 1rem;
    object-fit: cover;
  }
  @media (width>800px) {
    .family {
      display: flex;
      flex-direction: row;
      gap: 14rem;
      align-items: flex-start;
    }
    .family::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 200px;
      top: 0;
      left: 50%;
      transform: translateX(-50%) rotate(17deg);
      background-image: url("../img/flow.svg");
      background-size: contain;
      background-repeat: no-repeat;
      background-position: center;
      z-index: -1;
    }
    .collaborators {
      display: flex;
      flex-direction: row;
      gap: 2rem;
    }
  }
  @media (width<1160px) {
    .main {
      margin: 1.5em;
    }
  }
</style>
